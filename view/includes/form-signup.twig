<form action="/inscription/enregistrerMembre" class="flow-content" method="POST">
	<div>
		<label for="inputFirstName">Prénom&nbsp;:</label>
		<input id="inputFirstName" name="firstName" type="text" required="true">
	</div>

	<div>
		<label for="inputLastName">Nom&nbsp;:</label>
		<input id="inputLastName" name="lastName" type="text" required="true">
	</div>

	<div>
		<label for="inputEmail">Courriel <small>(sera votre nom d'usager utilisé à l'authentification)</small>&nbsp;:</label>
		<input id="inputEmail" name="email" type="email" required="true">
	</div>

	<div>
		<label for="inputPassword">Mot de passe&nbsp;: </label>
		<input id="inputPassword" name="password" type="password" required="true">
	</div>

	<div>
		<button type="submit">S'inscrire</button>
	</div>

	<div>
		<span>Déjà membre ? <a class="text-link" href="/authentification">Authentifiez-vous&nbsp;!</a></span>
	</div>
</form>